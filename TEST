import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        ArrayList<Student> arr = new ArrayList<Student>();
        Student s = new Student();
        for (; ; ) {
            System.out.println("欢迎使用学生管理系统");
            System.out.println("1.添加学生");
            System.out.println("2.查看学生");
            System.out.println("3.删除学生");
            System.out.println("4.修改学生信息");
            System.out.println("5.退出");
            Scanner sc = new Scanner(System.in);
            String line = sc.nextLine();
            switch (line) {
                case "1":
                    s.addstudent(arr);
                    break;
                case "2":
                    s.findstudent(arr);
                    break;
                case "3":
                    s.delestudent(arr);
                    break;
                case "4":
                    s.updatestudent(arr);
                    break;
                case "5":
                    System.out.println("谢谢使用");
                    System.exit(0);
            }

        }

    }
}

class Student {
    private String StuNum;
    private String Name;
    private String Age;

    public Student() {
    }

    public Student(String StuNum, String Name, String Age) {
        this.StuNum = StuNum;
        this.Name = Name;
        this.Age = Age;
    }

    public String getStuNum() {
        return StuNum;
    }

    public void setStuNum(String stuNum) {
        StuNum = stuNum;
    }

    public String getName() {
        return Name;
    }

    public void setName(String name) {
        Name = name;
    }

    public String getAge() {
        return Age;
    }

    public void setAge(String age) {
        Age = age;
    }

    public void addstudent(ArrayList<Student> arr) {
        Scanner sc = new Scanner(System.in);
        System.out.println("请输入学生学号");
        String stn = sc.nextLine();
        System.out.println("请输入学生姓名");
        String name = sc.nextLine();
        System.out.println("请输入学生年龄");
        String age = sc.nextLine();
        Student s = new Student();
        s.setStuNum(stn);
        s.setName(name);
        s.setAge(age);
        arr.add(s);
    }

    public void findstudent(ArrayList<Student> arr) {
        System.out.println("请输入你要查询的学生学号");
        Scanner sc = new Scanner(System.in);
        String stn = sc.nextLine();
        for (int i = 0; i < arr.size(); i++) {
            Student s = arr.get(i);
            if (s.getStuNum().equals(stn)) {
                System.out.println("学号:" + s.StuNum + "姓名:" + s.Name + "年龄:" + s.Age);
                return;
            }
        }
        System.out.println("查找不到该学生的信息！");

    }

    public void delestudent(ArrayList<Student> arr) {
        System.out.println("请输入你要删除的学生学号");
        Scanner sc = new Scanner(System.in);
        String stn = sc.nextLine();
        for (int i = 0; i < arr.size(); i++) {
            Student s = arr.get(i);
            if (s.getStuNum().equals(stn)) {
                arr.remove(i);
                System.out.println("删除成功");
            }
        }
    }

    public void updatestudent(ArrayList<Student> arr) {
        Scanner sc = new Scanner(System.in);
        System.out.println("请输入要修改的学生学号");
        String stn = sc.nextLine();
        System.out.println("请输入要修改的学生姓名");
        String name = sc.nextLine();
        System.out.println("请输入要修改的学生年龄");
        String age = sc.nextLine();
        Student s = new Student();
        s.setStuNum(stn);
        s.setName(name);
        s.setAge(age);
        for (int i = 0; i < arr.size(); i++) {
            Student student = arr.get(i);
            if (student.getStuNum().equals(stn)) {
                arr.set(i, s);
                break;
            }
        }
        System.out.println("修改学生成功");

    }
}
